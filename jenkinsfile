pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Clone the repo; 
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t python-jenkins-app .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 5000:5000 --name python_jenkins_app python-jenkins-app'
            }
        }
    }

    post {
        always {
            sh 'docker rm -f python_jenkins_app || true'
        }
    }
}
